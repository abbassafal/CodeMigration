        ];

        let currentIndex = 0;
        let isPaused = false;
        let isStopped = false;
        let startTime = null;
        let migrationResults = [];
        let connection = null;
        
        // Console log capture
        let consoleLogBuffer = [];
        const originalConsoleLog = console.log;
        const originalConsoleError = console.error;
        const originalConsoleWarn = console.warn;
        
        // Override console methods to capture logs
        console.log = function(...args) {
            consoleLogBuffer.push({
                type: 'log',
                message: args.join(' '),
                timestamp: new Date().toISOString()
            });
            originalConsoleLog.apply(console, args);
        };
        
        console.error = function(...args) {
            consoleLogBuffer.push({
                type: 'error',
                message: args.join(' '),
                timestamp: new Date().toISOString()
            });
            originalConsoleError.apply(console, args);
        };
        
        console.warn = function(...args) {
            consoleLogBuffer.push({
                type: 'warn',
                message: args.join(' '),
                timestamp: new Date().toISOString()
            });
            originalConsoleWarn.apply(console, args);
        };
        
        // Local storage keys
        const STORAGE_KEYS = {
            RESULTS: 'migrationResults',
            CURRENT_INDEX: 'currentMigrationIndex',
            START_TIME: 'migrationStartTime',
            STATUS: 'migrationStatus'
        };

        // Initialize SignalR
        async function initializeSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/migrationProgressHub")
                .build();

            connection.on("ReceiveProgress", (message) => {
                addLog(message, 'info');
            });

            try {
                await connection.start();
                addLog("Connected to migration hub", 'success');
            } catch (err) {
                addLog("Error connecting to hub: " + err, 'error');
            }
        }

        // Storage functions
        function saveMigrationState() {
            localStorage.setItem(STORAGE_KEYS.RESULTS, JSON.stringify(migrationResults));
            localStorage.setItem(STORAGE_KEYS.CURRENT_INDEX, currentIndex.toString());
            localStorage.setItem(STORAGE_KEYS.START_TIME, startTime ? startTime.toISOString() : '');
            localStorage.setItem(STORAGE_KEYS.STATUS, isPaused ? 'paused' : (isStopped ? 'stopped' : 'running'));
        }

        function loadMigrationState() {
            const savedResults = localStorage.getItem(STORAGE_KEYS.RESULTS);
            const savedIndex = localStorage.getItem(STORAGE_KEYS.CURRENT_INDEX);
            const savedStartTime = localStorage.getItem(STORAGE_KEYS.START_TIME);
            const savedStatus = localStorage.getItem(STORAGE_KEYS.STATUS);

            if (savedResults) {
                migrationResults = JSON.parse(savedResults);
                updateStatistics();
                
                // Rebuild timeline based on saved results
                migrationResults.forEach((result, index) => {
                    updateTimelineItem(index, result.status, result.details, result.time);
                    if (result.status === 'success') {
                        addResultRow(index + 1, result.table, 'Success', result.records, result.duration);
                    } else if (result.status === 'error') {
                        addResultRow(index + 1, result.table, 'Failed', 0, result.duration);
                    }
                });
            }

            if (savedIndex) {
                currentIndex = parseInt(savedIndex);
            }

            if (savedStartTime && savedStartTime !== '') {
                startTime = new Date(savedStartTime);
                document.getElementById('startTime').textContent = startTime.toLocaleString();
            }

            if (savedStatus === 'paused') {
                isPaused = true;
                document.getElementById('statusBadge').textContent = 'Paused';
                document.getElementById('btnStart').disabled = false;
                document.getElementById('btnPause').disabled = true;
                addLog('Migration state restored: Paused', 'warning');
            } else if (savedStatus === 'stopped') {
                isStopped = true;
                document.getElementById('statusBadge').textContent = 'Stopped';
                addLog('Migration state restored: Stopped', 'info');
            }
        }

        function clearMigrationState() {
            localStorage.removeItem(STORAGE_KEYS.RESULTS);
            localStorage.removeItem(STORAGE_KEYS.CURRENT_INDEX);
            localStorage.removeItem(STORAGE_KEYS.START_TIME);
            localStorage.removeItem(STORAGE_KEYS.STATUS);
        }

        // Initialize timeline
        function initializeTimeline() {
            const container = document.getElementById('timelineContainer');
            container.innerHTML = '';

            migrations.forEach((migration, index) => {
                const item = document.createElement('div');
                item.className = 'timeline-item';
                item.id = `timeline-${index}`;
                item.innerHTML = `
                    <div class="timeline-marker pending">${index + 1}</div>
                    <div class="timeline-content">
                        <div class="timeline-header">
                            <div class="timeline-title">${migration.display}</div>
                            <div class="timeline-status pending" id="status-${index}">Pending</div>
                        </div>
                        <div class="timeline-details" id="details-${index}">Waiting to start...</div>
                        <div class="timeline-time" id="time-${index}"></div>
                    </div>
                `;
                container.appendChild(item);
            });
        }

        // Start migration
        async function startMigration() {
            if (currentIndex === 0 && !startTime) {
                startTime = new Date();
                document.getElementById('startTime').textContent = startTime.toLocaleString();
                clearMigrationState(); // Clear old state when starting fresh
            }

            isPaused = false;
            isStopped = false;

            document.getElementById('btnStart').disabled = true;
            document.getElementById('btnPause').disabled = false;
            document.getElementById('btnStop').disabled = false;
            document.getElementById('btnDownload').disabled = false;
            document.getElementById('statusBadge').textContent = 'Running';

            if (currentIndex === 0) {
                addLog('Starting sequential migration...', 'success');
            } else {
                addLog(`Resuming migration from table ${currentIndex + 1}/${migrations.length}...`, 'success');
            }

            await executeNextMigration();
        }

        // Pause migration
        function pauseMigration() {
            isPaused = true;
            document.getElementById('btnStart').disabled = false;
            document.getElementById('btnPause').disabled = true;
            document.getElementById('statusBadge').textContent = 'Paused';
            saveMigrationState();
            addLog('Migration paused', 'warning');
        }

        // Stop migration
        function stopMigration() {
            isStopped = true;
            isPaused = false;
            document.getElementById('btnStart').disabled = false;
            document.getElementById('btnPause').disabled = true;
            document.getElementById('btnStop').disabled = true;
            document.getElementById('statusBadge').textContent = 'Stopped';
            saveMigrationState();
            addLog('Migration stopped by user', 'error');
        }

        // Execute next migration
        async function executeNextMigration() {
            if (isStopped || currentIndex >= migrations.length) {
                completeMigration();
                return;
            }

            if (isPaused) {
                return;
            }

            const migration = migrations[currentIndex];
            const startMigTime = new Date();
            
            // Clear console buffer for this migration
            consoleLogBuffer = [];

            // Update UI
            updateTimelineItem(currentIndex, 'running', 'Migrating...', '');

            addLog(`Starting migration: ${migration.display}`, 'info');

            try {
                // Call the migration API with correct endpoint
                const response = await fetch('/Migration/MigrateAsync', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        table: migration.api,
                        mappings: []
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                const endMigTime = new Date();
                const duration = ((endMigTime - startMigTime) / 1000).toFixed(2);

                if (result.success) {
                    // Extract record count - handle both formats
                    let recordCount = 0;
                    let skippedCount = 0;
                    let insertedCount = 0;
                    let detailMessage = result.message;
                    let tableLogs = []; // Store table-specific logs
                    
                    // Check if result has details object (for EventMaster and similar)
                    if (result.details) {
                        if (result.details.successCount !== undefined) {
                            recordCount = result.details.successCount;
                            insertedCount = result.details.successCount;
                            skippedCount = result.details.failedCount || 0;
                            detailMessage = `Success: ${result.details.successCount}, Failed: ${result.details.failedCount || 0}`;
                        } else if (result.details.inserted !== undefined) {
                            // New format with detailed logs
                            insertedCount = result.details.inserted || 0;
                            skippedCount = result.details.skipped || 0;
                            recordCount = insertedCount;
                            detailMessage = `Inserted: ${insertedCount}, Skipped: ${skippedCount}`;
                        }
                    } else {
                        // Extract from message
                        recordCount = extractRecordCount(result.message);
                        insertedCount = recordCount;
                        
                        // Try to extract skipped count if present
                        const skippedMatch = result.message.match(/skipped[:\s]+(\d+)/i);
                        if (skippedMatch) {
                            skippedCount = parseInt(skippedMatch[1]);
                        }
                    }
                    
                    // Capture console logs from API response
                    if (result.consoleOutput && typeof result.consoleOutput === 'string') {
                        // Parse console output into individual log lines
                        const consoleLines = result.consoleOutput.split('\n').filter(line => line.trim().length > 0);
                        tableLogs = consoleLines.map(line => ({
                            message: line,
                            timestamp: new Date().toISOString()
                        }));
                        
                        // Add first few lines to UI log for visibility
                        consoleLines.slice(0, 5).forEach(line => {
                            addLog(`[${migration.display} Console] ${line}`, 'info');
                        });
                        
                        if (consoleLines.length > 5) {
                            addLog(`[${migration.display}] ... and ${consoleLines.length - 5} more console logs (see Excel export)`, 'info');
                        }
                    } else {
                        // Use captured browser console logs if API doesn't return console output
                        tableLogs = consoleLogBuffer.map(log => ({
                            message: `[${log.type.toUpperCase()}] ${log.message}`,
                            timestamp: log.timestamp
                        }));
                        
                        console.log(`Captured ${tableLogs.length} console logs for ${migration.display}`);
                    }
                    
                    // Also capture logs if present (new format)
                    if (result.logs && Array.isArray(result.logs)) {
                        if (!tableLogs || tableLogs.length === 0) {
                            tableLogs = result.logs;
                        } else {
                            // Merge both sources
                            tableLogs = tableLogs.concat(result.logs.map(log => ({
                                message: log.message || JSON.stringify(log),
                                timestamp: log.timestamp || new Date().toISOString()
                            })));
                        }
                        
                        // Add logs to the log display (grouped format)
                        result.logs.forEach(log => {
                            const logLevel = log.level ? log.level.toLowerCase() : 'info';
                            const logType = logLevel === 'error' ? 'error' : 
                                          logLevel === 'warning' ? 'warning' : 
                                          logLevel === 'debug' ? 'info' : 'info';
                            
                            // Format grouped log message
                            let logMessage = '';
                            if (log.recordCount && log.recordCount > 1) {
                                // Multiple records - show range
                                const idRange = getIdRange(log.recordIds);
                                logMessage = `[${migration.display}] ${idRange} (${log.recordCount} records): ${log.message}`;
                            } else {
                                // Single record
                                const recordId = log.recordIds && log.recordIds.length > 0 ? log.recordIds[0] : 'N/A';
                                logMessage = `[${migration.display}] ${recordId}: ${log.message}`;
                            }
                            
                            addLog(logMessage, logType);
                        });
                    }
                    
                    migrationResults.push({
                        table: migration.display,
                        apiName: migration.api,
                        status: 'success',
                        records: recordCount,
                        insertedRecords: insertedCount,
                        skippedRecords: skippedCount,
                        duration: duration,
                        details: detailMessage,
                        time: new Date().toLocaleTimeString(),
                        errorMessage: 'N/A',
                        fullResponse: result,
                        logs: tableLogs // Store logs for Excel export
                    });

                    updateTimelineItem(currentIndex, 'success', 
                        `‚úì Migrated ${insertedCount} records` + (skippedCount > 0 ? ` (Skipped: ${skippedCount})` : ''), 
                        `Completed in ${duration}s`);

                    addLog(`‚úì ${migration.display}: ${detailMessage}`, 'success');
                    addResultRow(currentIndex + 1, migration.display, 'Success', insertedCount, skippedCount, duration);
                } else {
                    migrationResults.push({
                        table: migration.display,
                        apiName: migration.api,
                        status: 'error',
                        records: 0,
                        insertedRecords: 0,
                        skippedRecords: 0,
                        duration: duration,
                        details: result.error || 'Unknown error',
                        time: new Date().toLocaleTimeString(),
                        errorMessage: result.error || 'Unknown error'
                    });

                    updateTimelineItem(currentIndex, 'error', 
                        `‚úó Error: ${result.error || 'Unknown error'}`, 
                        `Failed after ${duration}s`);

                    addLog(`‚úó ${migration.display}: ${result.error || 'Unknown error'}`, 'error');
                    addResultRow(currentIndex + 1, migration.display, 'Failed', 0, 0, duration);
                }
            } catch (error) {
                const endMigTime = new Date();
                const duration = ((endMigTime - startMigTime) / 1000).toFixed(2);

                migrationResults.push({
                    table: migration.display,
                    apiName: migration.api,
                    status: 'error',
                    records: 0,
                    insertedRecords: 0,
                    skippedRecords: 0,
                    duration: duration,
                    details: error.message,
                    time: new Date().toLocaleTimeString(),
                    errorMessage: error.message
                });

                updateTimelineItem(currentIndex, 'error', 
                    `‚úó Error: ${error.message}`, 
                    `Failed after ${duration}s`);

                addLog(`‚úó ${migration.display}: ${error.message}`, 'error');
                addResultRow(currentIndex + 1, migration.display, 'Failed', 0, 0, duration);
            }

            // Save state after each migration
            saveMigrationState();

            // Update statistics
            updateStatistics();

            currentIndex++;

            // Continue to next migration after a short delay
            if (currentIndex < migrations.length && !isStopped && !isPaused) {
                setTimeout(() => executeNextMigration(), 500);
            } else if (currentIndex >= migrations.length) {
                completeMigration();
            }
        }

        // Helper function to extract record count from message
        function extractRecordCount(message) {
            const match = message.match(/(\d+)\s+records?\s+migrated/i);
            return match ? parseInt(match[1]) : 0;
        }

        // Helper function to get ID range from record identifiers
        function getIdRange(identifiers) {
            if (!identifiers || identifiers.length === 0) return 'N/A';
            if (identifiers.length === 1) return identifiers[0];
            
            // Try to extract numeric IDs
            const numericIds = [];
            const prefix = identifiers[0].split('=')[0];
            
            identifiers.forEach(id => {
                const match = id.match(/(\d+)/);
                if (match) {
                    numericIds.push(parseInt(match[1]));
                }
            });
            
            if (numericIds.length > 0) {
                numericIds.sort((a, b) => a - b);
                const min = numericIds[0];
                const max = numericIds[numericIds.length - 1];
                
                // Check if it's a continuous range
                if (numericIds.length === max - min + 1) {
                    return `${prefix}=${min}-${max}`;
                } else {
                    return `${prefix}=${min}...${max}`;
                }
            }
            
            return `${identifiers[0]}...${identifiers[identifiers.length - 1]}`;
        }

        // Update timeline item
        function updateTimelineItem(index, status, details, time) {
            const item = document.getElementById(`timeline-${index}`);
            const marker = item.querySelector('.timeline-marker');
            const content = item.querySelector('.timeline-content');
            const statusBadge = item.querySelector('.timeline-status');
            const detailsDiv = document.getElementById(`details-${index}`);
            const timeDiv = document.getElementById(`time-${index}`);

            marker.className = `timeline-marker ${status}`;
            content.className = `timeline-content ${status}`;
            statusBadge.className = `timeline-status ${status}`;
            statusBadge.textContent = status.charAt(0).toUpperCase() + status.slice(1);
            detailsDiv.textContent = details;
            timeDiv.textContent = time;

            // Scroll to current item
            item.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        // Update statistics
        function updateStatistics() {
            const completed = migrationResults.filter(r => r.status === 'success').length;
            const failed = migrationResults.filter(r => r.status === 'error').length;
            const pending = migrations.length - completed - failed;
            const progress = Math.round((completed / migrations.length) * 100);
            const totalRecords = migrationResults.reduce((sum, r) => sum + (r.insertedRecords || r.records || 0), 0);

            document.getElementById('completedCount').textContent = completed;
            document.getElementById('failedCount').textContent = failed;
            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('progressBar').style.width = progress + '%';
            document.getElementById('progressBar').textContent = progress + '%';
            document.getElementById('totalRecords').textContent = totalRecords.toLocaleString();

            if (startTime) {
                const currentTime = new Date();
                const durationSec = Math.floor((currentTime - startTime) / 1000);
                const minutes = Math.floor(durationSec / 60);
                const seconds = durationSec % 60;
                document.getElementById('duration').textContent = `${minutes}m ${seconds}s`;

                if (completed > 0 && durationSec > 0) {
                    const avgSpeed = (totalRecords / durationSec).toFixed(2);
                    document.getElementById('avgSpeed').textContent = `${avgSpeed} records/sec`;
                }
            }
        }

        // Add result row
        function addResultRow(index, table, status, insertedRecords, skippedRecords, duration) {
            const tbody = document.getElementById('resultsTable');
            const row = document.createElement('tr');
            
            const statusColor = status === 'Success' ? '#28a745' : '#dc3545';
            const totalRecords = insertedRecords + skippedRecords;
            
            row.innerHTML = `
                <td>${index}</td>
                <td><strong>${table}</strong></td>
                <td style="color: ${statusColor}; font-weight: bold;">${status}</td>
                <td>${insertedRecords.toLocaleString()}</td>
                <td>${skippedRecords > 0 ? skippedRecords.toLocaleString() : '-'}</td>
                <td>${totalRecords.toLocaleString()}</td>
                <td>${duration}s</td>
            `;
            
            tbody.appendChild(row);
            
            // Scroll to bottom of results
            document.getElementById('detailedResults').scrollTop = document.getElementById('detailedResults').scrollHeight;
        }

        // Add log entry
        function addLog(message, type = 'info') {
            const logContainer = document.getElementById('liveLog');
            const entry = document.createElement('div');
            entry.className = `log-entry ${type}`;
            
            const timestamp = new Date().toLocaleTimeString();
            entry.innerHTML = `<span class="log-timestamp">[${timestamp}]</span><span>${message}</span>`;
            
            logContainer.appendChild(entry);
            logContainer.scrollTop = logContainer.scrollHeight;
        }

        // Complete migration
        function completeMigration() {
            const endTime = new Date();
            document.getElementById('endTime').textContent = endTime.toLocaleString();
            document.getElementById('btnStart').disabled = false;
            document.getElementById('btnPause').disabled = true;
            document.getElementById('btnStop').disabled = true;
            document.getElementById('statusBadge').textContent = 'Completed';
            
            // Save final state
            saveMigrationState();
            
            const completed = migrationResults.filter(r => r.status === 'success').length;
            const failed = migrationResults.filter(r => r.status === 'error').length;
            
            addLog(`Migration completed! ${completed} successful, ${failed} failed.`, 
                failed === 0 ? 'success' : 'warning');
        }

        // Download Excel Report - Console Logs (Table-wise)
        function downloadExcelReport() {
            if (migrationResults.length === 0) {
                addLog('No migration data to export. Please run migrations first.', 'warning');
                return;
            }

            addLog('Generating console logs report (table-wise)...', 'info');
            
            // Create CSV content with table-wise console logs
            let csvContent = "data:text/csv;charset=utf-8,";
            
            // Add Header
            csvContent += "=== MIGRATION CONSOLE LOGS REPORT (TABLE-WISE) ===\n";
            csvContent += "Generated:," + new Date().toLocaleString() + "\n\n";
            
            // Process each table's console logs
            migrationResults.forEach((result, index) => {
                const tableName = result.table;
                csvContent += `\n=== ${index + 1}. ${tableName} ===\n`;
                csvContent += "Timestamp,Log Message\n";
                
                // Get console logs from the stored result
                const consoleLogs = result.logs || [];
                
                if (consoleLogs.length > 0) {
                    consoleLogs.forEach(log => {
                        const timestamp = log.timestamp || '';
                        const message = (log.message || '').replace(/"/g, '""');
                        csvContent += `"${timestamp}","${message}"\n`;
                    });
                } else {
                    csvContent += `"","‚ö†Ô∏è  NOTE: Console logs are printed to the server terminal/console."\n`;
                    csvContent += `"","To capture these logs automatically, the migration service needs to be updated to return logs in the API response."\n`;
                    csvContent += `"","Current workaround: Check your ASP.NET Core application terminal/console for detailed logs."\n`;
                }
                
                csvContent += "\n";
            });

            // Create download link
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            const timestamp = new Date().toISOString().replace(/[:.]/g, '-').split('T')[0];
            link.setAttribute("download", `Migration_Console_Logs_${timestamp}.csv`);
            document.body.appendChild(link);
            
            link.click();
            document.body.removeChild(link);
            
            addLog('Console logs report downloaded successfully!', 'success');
        }

        // Run Seed Data
        async function runSeedData() {
            if (!confirm('Are you sure you want to run seed data migrations? This will insert seed data into the PostgreSQL database.')) {
                return;
            }

            document.getElementById('btnSeedData').disabled = true;
            addLog('Starting seed data migration...', 'info');

            try {
                const response = await fetch('/Migration/RunSeedData', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    addLog(`‚úì Seed data migration completed successfully!`, 'success');
                    addLog(`  ${result.message}`, 'info');
                } else {
                    addLog(`‚úó Seed data migration failed: ${result.message || result.error}`, 'error');
                }
            } catch (error) {
                addLog(`‚úó Error running seed data: ${error.message}`, 'error');
            } finally {
                document.getElementById('btnSeedData').disabled = false;
            }
        }

        // Truncate Database
        async function truncateDatabase() {
            const confirmText = prompt(
                'WARNING: This will DELETE ALL DATA from all tables except migration tables!\n\n' +
                'Type "TRUNCATE" (in capital letters) to confirm:'
            );

            if (confirmText !== 'TRUNCATE') {
                if (confirmText !== null) {
                    addLog('Truncate operation cancelled - incorrect confirmation text', 'warning');
                }
                return;
            }

            document.getElementById('btnTruncate').disabled = true;
            addLog('Starting database truncation...', 'warning');

            try {
                const response = await fetch('/Migration/TruncateAllTables', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    addLog(`‚úì Database truncation completed successfully!`, 'success');
                    addLog(`  ${result.message}`, 'info');
                    if (result.tablesTruncated) {
                        addLog(`  Tables truncated: ${result.tablesTruncated}`, 'info');
                    }
                } else {
                    addLog(`‚úó Database truncation failed: ${result.message || result.error}`, 'error');
                }
            } catch (error) {
                addLog(`‚úó Error truncating database: ${error.message}`, 'error');
            } finally {
                document.getElementById('btnTruncate').disabled = false;
            }
        }

        // Reset Migration
        function resetMigration() {
            if (!confirm('Are you sure you want to reset the migration? This will clear all progress and start fresh.')) {
                return;
            }

            // Reset all variables
            currentIndex = 0;
            isPaused = false;
            isStopped = false;
            startTime = null;
            migrationResults = [];

            // Clear storage
            clearMigrationState();

            // Reset UI
            document.getElementById('btnStart').disabled = false;
            document.getElementById('btnPause').disabled = true;
            document.getElementById('btnStop').disabled = true;
            document.getElementById('btnDownload').disabled = true;
            document.getElementById('statusBadge').textContent = 'Ready';
            document.getElementById('startTime').textContent = '-';
            document.getElementById('endTime').textContent = '-';
            document.getElementById('duration').textContent = '-';
            document.getElementById('avgSpeed').textContent = '-';
            document.getElementById('totalRecords').textContent = '0';

            // Reinitialize timeline
            initializeTimeline();

            // Reset statistics
            document.getElementById('completedCount').textContent = '0';
            document.getElementById('failedCount').textContent = '0';
            document.getElementById('pendingCount').textContent = migrations.length;
            document.getElementById('progressBar').style.width = '0%';
            document.getElementById('progressBar').textContent = '0%';

            // Clear results table
            document.getElementById('resultsTable').innerHTML = '';

            // Clear log
            document.getElementById('liveLog').innerHTML = '';

            addLog('Migration reset successfully. Ready to start fresh.', 'success');
        }

        // Initialize on page load
        window.onload = function() {
            initializeTimeline();
            initializeSignalR();
            loadMigrationState(); // Load saved state from localStorage
            addLog('Sequential Migration Executor initialized', 'success');
            addLog(`${migrations.length} tables queued for migration`, 'info');
            
            if (migrationResults.length > 0) {
                addLog(`Restored ${migrationResults.length} completed migrations from previous session`, 'info');
            }
        };
